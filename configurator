<script>




                    function hexToRgb(hex) {
                        var result = /^#?([a-f\d]{2})([a-f\d]{2})([a-f\d]{2})$/i.exec(hex);
                        return result ? [
                            parseInt(result[1], 16) / 255,
                            parseInt(result[2], 16) / 255,
                            parseInt(result[3], 16) / 255
                        ] : null;
                    }

                    function srgbToLinear(color) {
                        var v = [];
                        for (var i = 0; i < 3; ++i) {
                            if (color[i] <= 0.04045) {
                                v[i] = color[i] / 12.92;
                            } else {
                                v[i] = Math.pow((color[i] + 0.055) / 1.055, 2.4);
                            }
                        }
                        return v;
                    }



                    // Twój unikalny identyfikator modelu na Sketchfab
                    var uid = '71317db32c9f485e9a679ba9d8c31af2';

                    // Inicjalizacja Sketchfab Viewer
                    var iframe = document.getElementById('api-frame');
                    var client = new window.Sketchfab('1.12.1', iframe);

                    // Zmienna do przechowywania API
                    var api;

                    // Funkcja do zmiany koloru
                    function setColor(material, hexColor, callback) {
                        var parsedColor = srgbToLinear(hexToRgb(hexColor));
                        material.channels.AlbedoPBR.enable = true;
                        material.channels.AlbedoPBR.color = parsedColor;

                        api.setMaterial(material, function() {
                            console.log('Color set to ' + hexColor);
                            callback();
                        });
                    }

                    // Inicjalizacja Sketchfab Viewer
                    client.init(uid, {
            success: function onSuccess(apiClient) {
                api = apiClient;
                api.start();
                api.addEventListener('viewerready', function() {
                    console.log('Viewer is ready');

                    var colors = {
                        "beige": "#A67C52",
                        "black": "#000000",
                        "blue": "#0053BC",
                        "brown": "#8D3703",
                        "cappuccino": "#D07E21",
                        "green": "#34452F",
                        "gray": "#585E55",
                        "navy": "#354685",
                        "red": "#B82928",
                        "silver": "#959090",
                        "wine": "#682F30"
                    };

                    document.getElementById('element-color').addEventListener('change', function() {
                        changeAllMaterials(colors[this.value]);
                    });

                    // Pobierz listę materiałów
                    var materialNames = ['Headrestfront', 'Headrestback', 'Backresttop', 'Backrestside', 'Backrestbot', 'Armrest', 'cloth', 'seatside', 'Seat', 'Base'];
                    function changeAllMaterials(color) {
                        api.getMaterialList(function(err, materials) {
                            if (err) {
                                console.error('Error getting materials:', err);
                                return;
                            }
                            console.log('Got materials:', materials);
                            var materialsToChange = materials.filter(function(material) {
                                return materialNames.includes(material.name);
                            });
                            function changeNextMaterial() {
                                if (materialsToChange.length === 0) {
                                    return;
                                }
                                var material = materialsToChange.pop();
                                setColor(material, color, changeNextMaterial);
                            }
                            changeNextMaterial();
                        });
                    }
                });
            },
            error: function onError() {
                console.log('Viewer error');
            }
        });
    </script>
<script>
        // Definiujemy kolory na poziomie globalnym
        var colors = {
            "beige": "#A67C52",
            "black": "#000000",
            "blue": "#0053BC",
            "brown": "#8D3703",
            "cappuccino": "#D07E21",
            "green": "#34452F",
            "gray": "#585E55",
            "navy": "#354685",
            "red": "#B82928",
            "silver": "#959090",
            "wine": "#682F30"
        };

        // Kod jest identyczny jak w oryginale aż do punktu 4

         // 4. Interakcja z użytkownikiem
         document.getElementById('element-color').addEventListener('change', function() {
            changeAllMaterials(colors[this.value]);
        });

        // Nowy listener dla konkretnej części modelu
        document.getElementById('Backrestbot-color').addEventListener('change', function() {
            changeMaterialColor('Backrestbot', colors[this.value]);
        });

        // Nowa funkcja, która zmienia kolor konkretnego materiału
        function changeMaterialColor(materialName, color) {
            api.getMaterialList(function(err, materials) {
                if (err) {
                    console.error('Error getting materials:', err);
                    return;
                }

                // Filtruje do konkretnego materiału zamiast listy materiałów
                var material = materials.find(function(material) {
                    return material.name === materialName;
                });

                // Zmienia kolor konkretnego materiału
                if (material) {
                    setColor(material, color, function() {});
                }
            });
        }
    </script>
