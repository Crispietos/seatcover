<script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/js/lightbox-plus-jquery.min.js"></script>
<script src="colorGallery.js"></script>
<script>
    // Mapowanie wartości opcji na URL tekstur
    const textureColors = {
        'standard': 'https://leatherseatcovers.ie/img/matarials/karo1.png',
        'plain': 'https://leatherseatcovers.ie/img/matarials/Quilted1a.jpg',
        'quilted': 'https://leatherseatcovers.ie/img/matarials/textures/Caro.png',
        'honeycomb': 'https://leatherseatcovers.ie/img/matarials/textures/Comb.png'
    };

    // Funkcja do aktualizacji tekstury
    function updateTexture(material, textureUrl) {
        api.addTexture(textureUrl, (err, textureUid) => {
            if (!err) {
                // Tworzymy obiekt tekstury z uid
                const texture = {
                    uid: textureUid
                };

                // Sprawdź, czy obiekt tekstury istnieje. Jeśli nie, utwórz go.
                if (!material.channels.AlbedoPBR.texture) {
                    material.channels.AlbedoPBR.texture = texture;
                } else {
                    material.channels.AlbedoPBR.texture.uid = textureUid;
                }

                material.channels.AlbedoPBR.enable = true;
                material.channels.AlbedoPBR.factor = 0.1; // Ustawiamy wartość factor na 0.1
                api.setMaterial(material, () => {
                    console.log('Updated material.');
                });
            } else {
                console.error('Error adding texture:', err);
            }
        });
    }

    // Nasłuchiwanie na zmiany w elemencie select
    document.getElementById('pattern-select').addEventListener('change', (event) => {
        const selectedOption = event.target.value;
        const textureUrl = textureColors[selectedOption];
        if (textureUrl) {
            api.getMaterialList((err, materials) => {
                if (!err) {
                    const seatMaterial = materials.find(m => m.name === 'Seat');
                    const backrestbotMaterial = materials.find(m => m.name === 'Backrestbot');
                    if (seatMaterial) {
                        updateTexture(seatMaterial, textureUrl);
                    } else {
                        console.error('Could not find material named "Seat".');
                    }
                    if (backrestbotMaterial) {
                        updateTexture(backrestbotMaterial, textureUrl);
                    } else {
                        console.error('Could not find material named "Backrestbot".');
                    }
                } else {
                    console.error('Error getting material list:', err);
                }
            });
        } else {
            console.error('No texture URL found for selected option:', selectedOption);
        }
    });
</script>
